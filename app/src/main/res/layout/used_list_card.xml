<?xml version="1.0" encoding="utf-8"?>



    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/carImage"
                android:layout_width="match_parent"
                android:layout_height="241dp"
                android:src="@drawable/img"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    >

                    <TextView
                        android:id="@+id/carName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2021 Mercedes-Benz C-Coupe 43 AMG 4MATIC"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="6dp"
                        />
                        <TextView
                            android:id="@+id/usedCarDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="usedCarDetails"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="#6f6f6f"
                            android:layout_marginBottom="12dp"
                            />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="28dp"
                    >
                    <TextView
                        android:id="@+id/formattedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 78.50 Lakh"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:paddingRight="12dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Make Offer"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#0288d1"
                        android:layout_gravity="bottom"
                        />

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Chat"
                            android:textColor="#00afa0"
                            android:textSize="15dp"
                            android:backgroundTint="@color/white"


                            >

                        </Button>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Get Seller Details"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:backgroundTint="#e53012"
                            >

                        </Button>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

